<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.wlp.wenshidu.DashboardView2
        android:id="@+id/dashboard_view_2"
        android:layout_width="540px"
        android:layout_height="740px" />

    <com.wlp.wenshidu.DashboardView3
        android:id="@+id/dashboard_view_3"
        android:layout_toRightOf="@+id/dashboard_view_2"
        android:layout_width="540px"
        android:layout_height="740px"/>

    <Button
        android:id="@+id/a"
        android:text="1档"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_view_2"/>
    <Button
        android:id="@+id/b"
        android:text="2档"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"/>
    <Button
        android:id="@+id/c"
        android:text="3档"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b"/>
    <Button
        android:id="@+id/d"
        android:text="4档"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c"/>
    <Button
        android:id="@+id/e"
        android:text="5档"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d"/>


    <Button
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/a"
        android:layout_marginLeft="-84dp"
        android:layout_marginTop="242dp"
        android:layout_toRightOf="@+id/a"
        android:text="1档" />

    <Button
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f"
        android:layout_marginLeft="-84dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/a"
        android:text="2档" />


    <Button
        android:id="@+id/j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="227dp"
        android:layout_toRightOf="@+id/a"
        android:text="5档" />


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="800px"
        android:layout_height="339dp"
        android:layout_below="@+id/dashboard_view_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="5dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        app:layout_constraintTop_toBottomOf="@+id/view_pager"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorFullWidth="false"
        app:tabMinWidth="50dp"
        app:tabMode="fixed"
        app:tabRippleColor = "@android:color/transparent"
        app:tabSelectedTextColor="@color/color_blue"
        app:tabTextColor="@color/color_dark" />



























</RelativeLayout>